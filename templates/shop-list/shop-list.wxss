.tuan_container{
    width: 96.99999%;
    margin: 0 auto;
    background-color: #fff;
    padding-bottom: 5px;
}

.tuan_info{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 8rpx;
    margin-left: 8rpx;
    margin-right: 8rpx;
    margin-top: 8rpx;
    background-color: #fff;
}

.title_info{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 8rpx;
    margin-left: 8rpx;
    margin-right: 8rpx;
    margin-top: 8rpx;
    background-color: #fff;
}


.item-left{
    margin-top: 15rpx;
    margin-left: 5px;
    display:table-cell;
    text-align: center;
}



.item-left image {
    width: 88rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background-color: #eeeeee;
}
.item-middle{
    flex: 1;
    margin-left: 10rpx;
    padding-top: 13rpx;
    overflow: hidden;
}

.item-middle .follow-user-name{
    color: #000000;
    font-family:"微软雅黑";
    font-weight:bold;
    line-height: 88rpx;
    font-size: 14px;
    margin-top: 60rpx;
}

.item_right{
    padding-top: 13rpx;
    padding-right: 10px;
    overflow: hidden;
}

.follow-status{
    color: #5e5e5e;
    font-family:"微软雅黑";
    font-weight:bold;
    line-height: 88rpx;
    font-size: 14px;
    padding: 3px 10px;
    margin-top: 60rpx;
    background: #00aa00;
    border-radius: 3px;
    color: #FFFFFF;
    border: 1px solid #00aa00;
}

.full{
    width: 100%;
}

.product_pic image{
    width: 100%;
    max-height: 145px;
}
.product_desc text{
    color: #5e5e5e;
    font-family:"微软雅黑";
    font-size: 13px;
    padding:2px 4px 0 4px;
}

.price_info{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.price_info {
    margin-top: 2px;
    padding:0 8px;
}
.price_ori {
    text-decoration:line-through;
    font-size: 12px;
    color: rgba(14, 105, 96, 0.95);
}
.price_current {
    font-size: 13px;
    color: #ff4758;
    font-weight: bold;
    padding-left: 6px;
}

.price_right {
    font-size: 13px;
    color: #ff4758;
    font-weight: bold;
    float: right
}

.join_image{
    width: 25px;
    height: 25px;
    border-radius: 50%;
    float: right;
}
.result{
    color: #5e5e5e;
    font-family:"微软雅黑";
    font-size: 13px;
    padding:2px 4px 0 4px;
}