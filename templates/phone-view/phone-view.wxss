.section__title{
  padding: 5rpx;
}
.flex-wrp{
  width: 100%;
  display: flex;
}
.flex-row{
  flex-direction: row;
}
.flex-col{
  flex-direction: column;
}
.flex-item{
  color: #000;
  width: 100%;
  height: 200rpx;
  text-align: center;
}
.flex-col-item{
  color: #000;
  width: 100%;
  text-align: center;
  height: 100%;
}
.join_image{
    width: 100px;
    height: 100px;
    border-radius: 50%;
}
.result{
    color: #5e5e5e;
    font-family:"微软雅黑";
    font-size: 13px;
    padding:2px 4px 0 4px;
}
.item-left{
    margin-top: 15rpx;
    margin-left: 5px;
    display:table-cell;
    text-align: center;
}

.item-left image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    background-color: #eeeeee;
}
.item-middle{
    flex: 1;
    margin-left: 10rpx;
    padding-top: 13rpx;
    overflow: hidden;
    text-align: center;
}

.item-center{
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.item-middle .follow-user-name{
    color: #000000;
    font-family:"微软雅黑";
    font-weight:bold;
    line-height: 88rpx;
    font-size: 14px;
    margin-top: 60rpx;
}

.item_right{
    padding-top: 13rpx;
    padding-right: 10px;
    margin-right: 10px;
    overflow: hidden;
}
.follow-status{
    color: #5e5e5e;
    font-family:"微软雅黑";
    font-weight:bold;
    line-height: 50rpx;
    font-size: 14px;
    padding: 3px 10px;
    margin-top: 60rpx;
    background: #00aa00;
    border-radius: 3px;
    color: #FFFFFF;
    border: 1px solid #00aa00;
}